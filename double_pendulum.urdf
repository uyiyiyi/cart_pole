<?xml version="1.0"?>
<robot name="double_pendulum">
  <link name="cart">
    <visual>
      <geometry>
        <box size="0.5 0.2 0.1"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.05"/>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
  </link>

  <link name="pole1">
    <visual>
      <geometry>
        <cylinder length="0.6" radius="0.025"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.3"/>
      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <link name="pole2">
    <visual>
      <geometry>
        <cylinder length="0.6" radius="0.025"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.3"/>
      <material name="green">
        <color rgba="0 1 0 1"/>
      </material>
    </visual>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <joint name="slider_to_cart" type="prismatic">
    <parent link="world"/>
    <child link="cart"/>
    <axis xyz="1 0 0"/>
    <limit effort="100" lower="-10" upper="10" velocity="10"/>
  </joint>

  <joint name="cart_to_pole1" type="revolute">
    <parent link="cart"/>
    <child link="pole1"/>
    <axis xyz="0 1 0"/>
    <origin rpy="0 0 0" xyz="0 0 0.1"/>
    <limit effort="100" lower="-3.1415" upper="3.1415" velocity="10"/>
  </joint>

  <joint name="pole1_to_pole2" type="revolute">
    <parent link="pole1"/>
    <child link="pole2"/>
    <axis xyz="0 1 0"/>
    <origin rpy="0 0 0" xyz="0 0 0.6"/>
    <limit effort="100" lower="-3.1415" upper="3.1415" velocity="10"/>
  </joint>

  <link name="world"/>
</robot>